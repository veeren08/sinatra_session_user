<div class="row justify-content-center">
  <div class="col-6">
    <div class="module">
      <h1>OTP Verification</h1>
    </div>

    <% if flash[:info] %>
        <p><%= flash[:info] %></p>
    <% end %>

    <%= partial 'shared/errors' %>

    <% if @user %>
      <form action="/verify_otp/<%= @user.id %>" method="post">
        <div class="mb-4">
          <label for="otp" class="label">Enter OTP::</label>
          <input type="text" id="otp" name="otp" required class="form-input">
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary">
            Verify
          </button>
        </div>
      </form>
    <% else %>
        <p>Invalid user or OTP verification link.</p>
    <% end %>
  </div>
</div>
